<ul reversed class="list-reset postlist">
{% for post in postslist | reverse %}
  <li class="postlist-item-card">
    <a href="{{ post.url | url }}">
      <div class="postlist-item-content">
        {% if post.data.feature_image %}<img src="../img/{{ post.data.feature_image }}" alt="{% if post.data.title %}{{ post.data.title }}{% endif %}">{% endif %}
        <div class="postlist-item-title">
          <h3 class="margin-reset">
            {% if post.data.title %}{{ post.data.title }}{% endif %}
          </h3>
        </div>
        <div class="postlist-item-description">
          <p>
            {% if post.data.description %}{{ post.data.description }}{% endif %}
          </p>
        </div>
        <div class="postlist-item-tags">
          <p class="small tags margin-reset">
            {% for tag in post.data.tags %}
              {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <span class="tag">{{ tag }}</span>
              {%- endif -%}
            {% endfor %}
          </p>
        </div>
      </div>
    </a>
  </li>
{% endfor %}
</ul>
